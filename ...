git init
git clone https://github.com/yaswitha545/docker-cicd.git
git status 
name: CI/CD Pipeline
on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2
    - name: Log in to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_USERNAME }}
        password: ${{ secrets.DOCKER_PASSWORD }}
    - name: Build Docker image
      run: |
        docker build -t your-dockerhub-username/your-image-name:${{ github.sha }} .
    - name: Run tests in Docker container
      run: |
        docker run --rm your-dockerhub-username/your-image-name:${{ github.sha }} pytest
    - name: Push Docker image to Docker Hub
      run: |
        docker push your-dockerhub-username/your-image-name:${{ github.sha }}
